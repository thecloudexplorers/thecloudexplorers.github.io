{
  "metadata": [],
  "build": {
    "content": [
      {
        "files": [
          "**.md",
          "**.yml"
        ],
        "src": "docs",
        "dest": "."
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "**/diagrams/images/**"
        ],
        "src": "docs"
      }
    ],

    "template": [
      "default",
      "templates/singulinkfx",
      "templates/custom"
    ],
    "globalMetadata": {
      "_appTitle": "The Cloud Explorers",
      "_appName": "The Cloud Explorers",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.png",
      "_appFooter": "Â© 2025 The Cloud Explorers. All rights reserved.",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/thecloudexplorers",
        "branch": "main"
      },
      "pdf": true
    },
    "fileMetadata": {},
    "dest": "_site",
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
        "abbreviations",
        "attributes",
        "customcontainers",
        "emphasisextras",
        "pipetables",
        "listextras",
        "footers",
        "footnotes",
        "tasklists",
        "medialinks"
      ],
      "alerts": {
        "TODO": "alert alert-secondary",
        "SUCCESS": "alert alert-success",
        "ERROR": "alert alert-danger"
      }
    }
  },
  "pdf": {
    "content": [
      {
        "files": [
          "**/*.md"
        ],
        "src": "docs"
      }
    ],
    "dest": "_site/pdf",
    "wkhtmltopdf": {
      "path": "wkhtmltopdf",
      "additionalArguments": [
        "--no-header-line",
        "--no-footer-line"
      ]
    },
    "template": "templates/custom-pdf"
  }
}
